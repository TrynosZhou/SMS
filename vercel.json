{
  "version": 2,
  "buildCommand": "cd frontend && rm -rf dist node_modules/.cache .angular && npm ci && npm run build:clean",
  "outputDirectory": "frontend/dist/sms-frontend",
  "installCommand": "cd frontend && npm ci",
  "framework": "angular",
  "rootDirectory": "frontend",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*.(js|css))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}